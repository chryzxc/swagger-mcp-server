{
  "compilerOptions": {
    "target": "ES2022", // good baseline for Node 18+
    "module": "NodeNext", // required for MCP SDK
    "moduleResolution": "NodeNext", // required for MCP SDK
    "outDir": "./dist",
    "esModuleInterop": true, // helps with imports
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node"] // make sure Node types are available
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
